<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:windowContentTransitions">true</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/colorOnFirst</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/colorOnFirst</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">@color/colorOnFirst</item>
        <item name="colorSurface">@color/colorOnFirst</item>
        <item name="colorOnSurface">@color/colorOnSecond</item>
        <item name="android:colorBackground">@color/colorOnFirst</item>
        <item name="colorOnBackground">@color/colorOnSecond</item>

        <item name="toolbarStyle">@style/Widget.AppTheme.Toolbar</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.AppTheme.Headline6</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppTheme.Button</item>
        <item name="textInputStyle">@style/Widget.AppTheme.TextInputLayout.Translate</item>
        <item name="materialCardViewStyle">@style/Widget.AppTheme.MaterialCardView</item>

    </style>


    <style name="Widget.AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:colorBackground">?attr/colorOnSecondary</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppTheme.Toolbar</item>
    </style>

    <style name="TextAppearance.AppTheme.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/courgette</item>
    </style>

    <style name="TextAppearance.AppTheme.Toolbar" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/courgette</item>
    </style>

    <style name="TextAppearance.AppTheme.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/lato</item>
    </style>


    <style name="TextAppearance.AppTheme.CardView" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.AppTheme.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.AppTheme.MaterialCardView</item>
    </style>

    <style name="TextAppearance.AppTheme.CardViewSub" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Translation.Title" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/courgette</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout.Translate" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

    <style name="Widget.AppTheme.Backdrop" parent="">
        <item name="android:background">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Widget.AppTheme.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
    </style>

    <style name="ShapeAppearance.AppTheme.MaterialCardView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="TextAppearance.AppTheme.EngWord" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/engWordColor</item>
    </style>

    <style name="TextAppearance.AppTheme.TransWord" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

</resources>
